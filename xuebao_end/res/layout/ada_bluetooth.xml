<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/adalin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Dbelow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
         android:focusable="true"  
   		android:focusableInTouchMode="true"
        >
        <!-- 不可聚焦 -->

        <EditText
            android:id="@+id/adaet_send"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="5"
            android:background="@drawable/aaa_myshape"
            android:hint="公共笔记"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="#4d5256"
            android:textColorHint="#999999"
            android:textSize="25sp"
             />

        <Button
            android:id="@+id/adabt_send"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_weight="25"
            android:background="@drawable/ada_bt_send"
            android:textSize="14sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/adalintop"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"      
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" >
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="10"
            android:background="@drawable/aaa_imagebackground">

            <Button
                android:id="@+id/adabt_note"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/abi_menu_note" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="10"
            android:background="@drawable/aaa_imagebackground">
            <Button 
		    	android:id="@+id/adabt_diary"
          		android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
           		android:background="@drawable/abi_menu_diary"
       
         
		    />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="10"
            android:background="@drawable/aaa_imagebackground">
            <Button
           		android:id="@+id/adabt_bluetooth"
         		android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
            	android:background="@drawable/ada_top_closebluetooth"
         		android:textColor="#33FF00"
         		
         					 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="10"
             android:background="@drawable/aaa_imagebackground">
             <Button
           		 android:id="@+id/adabt_sign"
         		 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:layout_centerHorizontal="true"
                 android:layout_centerVertical="true"
          	 	 android:background="@drawable/ada_top_sind"
          
           
         					 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="10"
           android:background="@drawable/aaa_imagebackground">
             <Button
            	android:id="@+id/adabt_refresh"
         		android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
           	    android:background="@drawable/ada_top_refresh"
           		android:textColor="#33FF00"
            
         					 />
        </RelativeLayout>
		
		 
		 
       
    </LinearLayout>

    <ScrollView
        android:id="@+id/adasc_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adalin"
        android:layout_below="@+id/adalintop"
        android:paddingLeft="6dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:focusable="true"  
   		android:focusableInTouchMode="true" >
		 <EditText
            android:id="@+id/adaet_note"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="5"
            android:background="@drawable/aaa_myshape"
            android:hint="笔记内容   \n  打开蓝牙接收公共笔记      "
            android:paddingLeft="6dp"
            android:paddingRight="3dp"
            android:textColorHint="#999999"
            android:textSize="20dp"
            android:autoLink="email|phone|web" 
            android:textColor="#ffffff"
             />
      
        
	
        
    </ScrollView>

</RelativeLayout>