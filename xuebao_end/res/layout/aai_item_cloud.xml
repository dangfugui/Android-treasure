<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/paraList_rl"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="5dip">
	<ImageView android:id="@+id/aaiim_image"
			android:layout_width="56dip"
			android:layout_height="56dip"
			android:layout_marginLeft="5dip"
			android:scaleType="centerInside"
			android:layout_centerVertical="true"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="56dip"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/aaiim_image"
	    android:gravity="top"
	    android:layout_marginLeft="10dip"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/aaitv_name"
		    style="@style/tvInListView"
		    android:layout_width="match_parent"
		    android:layout_height="38dp"
		    android:textSize="20dp"
		    android:ellipsize="end"
		    android:singleLine="true"
		     />
		<TextView
		    android:id="@+id/aaitv_property"
		    style="@style/tvInListView"
		    android:layout_width="match_parent"
		    android:layout_height="18dp"
		    android:ellipsize="end"
		    android:singleLine="true"
		    android:textColor="@color/Color_Black_a_60"
		     />
	    	
	   
	</LinearLayout>
	

</RelativeLayout>
